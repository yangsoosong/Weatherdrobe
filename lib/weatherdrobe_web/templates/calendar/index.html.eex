<%= render(WeatherdrobeWeb.SharedView, "_header.html", conn: @conn) %>

<h1>Listing Calendars</h1>

<table>
  <thead>
    <tr>
      <th>User ID:</th>
      <th>Activity:</th>
      <th>Date</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for calendar <- @calendars do %>
  <%= if @current_user.id == calendar.user_id do %>
    <tr>
      <td><%= calendar.user_id %></td>
      <td><%# Weatherdrobe.Activities.get_activity(calendar.activity_id)%>Check Edit</td>
      <td><%= calendar.date %></td>
      <td><%= calendar.name %></td>
      <td>
        <%= link "Show", to: Routes.calendar_path(@conn, :show, calendar) %>
        <%= link "Edit", to: Routes.calendar_path(@conn, :edit, calendar) %>
        <%= link "Delete", to: Routes.calendar_path(@conn, :delete, calendar), method: :delete, data: [confirm: "Are you sure?"] %>
      </td>
    </tr>
  <% end %>
<% end %>
  </tbody>
</table>

<span><%= link "New Calendar", to: Routes.calendar_path(@conn, :new) %></span>
